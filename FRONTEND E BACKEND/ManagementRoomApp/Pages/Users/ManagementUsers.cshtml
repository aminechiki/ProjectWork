@page
@model ManagementRoomApp.Pages.ManagementUsersModel
@{
}


@section scripts {
    <script>
        // Funzione per impostare l'ID utente nella modale
        function openModal(userId) {
            document.getElementById("userId").textContent = userId;
            $('#myModal').modal('show');
        }
    </script>
}



<div>
    <h1 style="text-align: center;">LISTA UTENTI</h1>
</div>


<section class="intro">

    <div class="container">
        <div class="row justify-content-center">

            <div class="card-body p-0">
                <div data-mdb-perfect-scrollbar="true" style="position: relative">
                    <a class="btn btn-secondary" href="/Index" style="margin-bottom:15px"><b>TORNA ALLA HOME PAGE</b></a>

                    <table id="tableUser" class="table table-striped table-bordered mb-0">
                        <thead style="background-color: #4D4B4B ;">
                            <tr>
                                <th scope="col">EMAIL</th>
                                <th scope="col">NUMERO DI TELEFONO</th>
                                <th scope="col">AZIONE</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Email</td>

                                    @if (user.PhoneNumber == 0)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td>@user.PhoneNumber</td>
                                    }

                                    <td>

                                        <button type="button" class="btn btn-secondary btn-sm" onclick="openModal('@user.Id')">
                                            <b>EDIT DOORS PEMISSIONS </b>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                            </svg>
                                        </button>

                                        <a class="btn btn-secondary btn-sm" href="/Users/Accesses/ManagementAccesses?Id=@user.Id">
                                            <b>VIEW ACCESSES </b>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                            </svg>
                                        </a>

                                        <a class="btn btn-danger btn-sm" href="/Users/DeleteUser?Id=@user.Id">
                                            <b>DELETE </b>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Modale -->
<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="text-align: center;" href="/DoorsPermissiones/ManagementDoorsPermissiones"><b>EDIT DOORS PEMISSIONS</b></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <span hidden id="userId"></span>

                <section class="intro">
                    <div class="container">
                        <div class="row justify-content-center">

                            <div class="card-body p-0">

                                <div data-mdb-perfect-scrollbar="true" style="position: relative">

                                    <button class="btn btn-secondary" onclick="myFunction()" style="margin-bottom:15px"><b>ADD DOORS PERMISSIONS</b></button>

                                    <div id="myDIV" style="margin-bottom:30px; border-style: solid; border-radius: 25px; display: none;">

                                        <p style="text-align:center; padding-top:3px"><b> INSERISCI LA PORTA DELL'EDIFICO A CUI VUOI CHE L'UTENTE ACCEDA</b></p>
                                        <div style="padding: 2px 10px 10px 10px;">

                                            <form>
                                                <div class="mb-3">
                                                    <label for="" class="form-label">EDIFICIO</label>
                                                    <select id="" class="form-select">
                                                        <option></option>

                                                        @foreach (var door in Model.Doors)
                                                        {
                                                            <option>@door.NameBuilding</option>
                                                        }

                                                    </select>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="" class="form-label">PORTA</label>
                                                    <select id="" class="form-select">
                                                        <option></option>
                                                        @foreach (var door in Model.Doors)
                                                        {
                                                            <option>@door.NameDoor</option>
                                                        }
                                                    </select>
                                                </div>
                                            </form>
                                            <div style="display: flex; justify-content: flex-end">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ADD</button>
                                            </div>
                                        </div>
                                    </div>
                                    <h5 class="modal-title" id="exampleModalLabel" style="text-align: center;"><b>  LIST DOORS PERMISSIONS USER</b></h5>
                                    <table id="tableUser" class="table table-striped table-bordered mb-0">
                                        <thead style="background-color: #4D4B4B ;">
                                            <tr>
                                                <th scope="col"><b>PORTA</b></th>
                                                <th scope="col"><b>EDIFICIO</b></th>
                                                <th scope="col"><b>AZIONE</b></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                </td>

                                                <td>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Users/DeleteUser?Id=">
                                                        <b>DELETE </b>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                                        </svg>
                                                    </a>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

    function myFunction() {
        var x = document.getElementById("myDIV");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>

