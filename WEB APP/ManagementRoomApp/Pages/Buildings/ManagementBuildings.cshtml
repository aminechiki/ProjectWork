@page
@model ManagementRoomApp.Pages.Buildings.ManagementBuildingsModel
@{
}

@section scripts {
    <script>
        // Funzione per impostare l'ID utente nella modale
        function openModal(userId) {
            document.getElementById("userId").textContent = userId;
            $('#modalAddBuilding').modal('show');
        }

        function openAddPort(IdBuilding) {
            document.getElementById("IdBuilding").value = IdBuilding;
            $('#modalAddPort').modal('show');
        }

        function myFunction() {
            var x = document.getElementById("modalAddPort");
        }

    </script>
}

<section class="intro">

    <div class="container">

        <div class="row justify-content-center">

            <div class="card-body p-0">
                <div data-mdb-perfect-scrollbar="true" style="position: relative">

                    <div>
                        <a class="btn btn-secondary" href="/Index" style="margin-bottom:15px"><b>TORNA ALLA HOME PAGE</b></a>
                        <a class="btn btn-secondary" style="margin-bottom:15px" onclick="openModal('')"><b>AGGIUNGI EDIFICIO</b></a> 
                    </div>

                    <table id="tableUser" class="table table-striped table-bordered mb-0">
                        <thead>
                            <tr>
                                <th scope="col">ID DEVICE</th>
                                <th scope="col">ID DEVICE CLOUD</th>
                                <th scope="col">EDIFICIO</th>
                                <th scope="col">AZIONE</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var building in Model.Buildings)
                            {
                                <tr>
                                    <td>@building.IdDevice</td>
                                    <td>@building.NameBuilding</td>
                                    <td>@building.Description</td>
                                    <!--Se il numero è non è presente si visualizza il campo null e non 0-->

                                    <td>

                                        <div class="d-flex justify-content-start">

                                            <a class="btn btn-secondary btn-sm" style="margin-left:3px" asp-page="/Buildings/ManagementDoors/ManagementBuildingDoors" asp-route-id="@building.Id">
                                                <b>GESTISCI PORTE</b>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                                </svg>
                                            </a>
                                            <form asp-page-handler="DeleteBuilding" method="post" style="margin-left:3px">
                                                <button class="btn btn-danger btn-sm">
                                                    <input type="hidden" name="idBuilding" value="@building.Id" />
                                                    <b>ELIMINA </b>
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

</section>


<!-- Modale Add Building-->
<div class="modal" id="modalAddBuilding" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="text-align: center;"><b>AGGIUNGI EDIFICIO</b></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <span hidden id="userId"></span>

                <section class="intro">
                    <div class="container">
                        <div class="row justify-content-center">

                            <div class="card-body p-0">

                                <div data-mdb-perfect-scrollbar="true" style="position: relative">

                                    <div id="myDIV" style="margin-bottom:30px; border-style: solid; border-radius: 25px;">
        
                                        <div style="padding: 2px 10px 10px 10px;">

                                            <form asp-page-handler="Building" method="post">
                                                <div class="mb-3">
                                                    <label class="form-label">ID DEVICE</label>
                                                    <input type="number" class="form-control" name="IdDevice" required>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label">ID DEVICE CLOUD</label>
                                                    <input type="text" class="form-control" name="NameBuilding" required>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label">NOME EDIFICIO</label>
                                                    <input type="text" class="form-control" name="IdDeviceCloud" required>
                                                </div>

                                                <div style="display: flex; justify-content: flex-end">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <button href="/" type="submit" style="margin-left: 3px;" class="btn btn-secondary" data-bs-dismiss="modal">AGGIUNGI EDIFICIO</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

<script defer src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script defer src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
