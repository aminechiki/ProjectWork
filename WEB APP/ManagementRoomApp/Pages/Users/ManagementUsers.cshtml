@page
@model ManagementRoomApp.Pages.ManagementUsersModel
@{
}

@section scripts {
    <script>
        // Funzione per impostare l'ID utente nella modale
        function openModal(userId) {
            document.getElementById("userId").textContent = userId;
            $('#myModal').modal('show');
    </script>
}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="card-body p-0">
                <div class="scrollit" style="position: relative">
                    <a class="btn btn-secondary" href="/Index" style="margin-bottom:15px"><b>TORNA ALLA HOME PAGE</b></a>
                    <table id="tableUser" class="table table-striped table-bordered mb-0">
                        <thead>
                            <tr>
                                <th scope="col">EMAIL</th>
                                <th scope="col">NUMERO DI TELEFONO</th>
                                <th  scope="col">AZIONE</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td >@user.Email</td>

                                    @if (user.PhoneNumber == 0)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td>@user.PhoneNumber</td>
                                    }
                                    <td>

                                        <div class="d-flex justify-content-between">
                                            <a type="button" class="btn btn-secondary btn-sm" href="/Users/DoorsPermissiones/ManagementDoorsPermissiones?Id=@user.Id">
                                                <b>GESTISCI PERMESSI PORTE </b>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                                </svg>
                                            </a>
                                            <a class="btn btn-secondary btn-sm" href="/Users/Accesses/ManagementAccesses?Id=@user.Id" style="margin-left:3px">
                                                <b>VISUALIZZA ACCESSI</b>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                                </svg>
                                            </a>

                                            @if (user.IsAdmin)
                                            {
                                                <form asp-page-handler="SetNormalUser" method="post" style="margin-left:3px">
                                                    <button class="btn btn-secondary btn-sm">
                                                        <input type="hidden" name="IdUser" value="@user.Id" />
                                                        <b>IMPOSTA COME UTENTE</b>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill-down" viewBox="0 0 16 16">
                                                            <path d="M12.5 9a3.5 3.5 0 1 1 0 7 3.5 3.5 0 0 1 0-7Zm.354 5.854 1.5-1.5a.5.5 0 0 0-.708-.708l-.646.647V10.5a.5.5 0 0 0-1 0v2.793l-.646-.647a.5.5 0 0 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0ZM11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                                            <path d="M2 13c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z" />
                                                        </svg>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-page-handler="SetUserAdmin" method="post" style="margin-left:3px">
                                                    <button class="btn btn-secondary btn-sm">
                                                        <input type="hidden" name="IdUser" value="@user.Id" />
                                                        <b>IMPOSTA COME ADMIN</b>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill-up" viewBox="0 0 16 16">
                                                            <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm.354-5.854 1.5 1.5a.5.5 0 0 1-.708.708L13 11.707V14.5a.5.5 0 0 1-1 0v-2.793l-.646.647a.5.5 0 0 1-.708-.708l1.5-1.5a.5.5 0 0 1 .708 0ZM11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                                            <path d="M2 13c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z" />
                                                        </svg>
                                                    </button>
                                                </form>
                                            }

                                            <form asp-page-handler="DeleteUser" method="post" style="margin-left:3px">
                                                <button class="btn btn-danger btn-sm">
                                                    <input type="hidden" name="IdUser" value="@user.Id" />
                                                    <b>ELIMINA </b>
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
