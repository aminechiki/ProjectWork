@page
@model ManagementRoomApp.Pages.TokenModel
@{
}

<style>
    body {
        background-image: url(/images/immagine_campus_modificata.jpg);
    }
</style>

<body>

<div class="row" style="margin-top:170px">
        <div class="mx-auto" style="border-radius: 25px; background-color:azure;width:600px;">
        <section>
                <div style="margin-top : 50px; margin-left:30px;margin-bottom : 50px; margin-right:30px">
                    <form asp-page-handler="CompareCode" id="formGenerateCode" method="post">
                    <h5 style="text-align:center">Inserisci il codice che visualizzi nel control room</h5>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                            <input asp-for="Input.Code" class="form-control" aria-required="true" name="code" required/>
                        <label asp-for="Input.Code" class="form-label">Code</label>
                    </div>
                    <div>
                        <button id="code-submit" type="submit" class="w-100 btn btn-lg btn-primary">OTTIENI TOKEN</button>
                    </div>

                </form>
                                <div style="margin-top: 5px">
                    <button href="/Index" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:orangered">CANCEL</button>
                    </div>
                </div>
        </section>
    </div>

</body>